{% extends 'base.html.twig' %}


{% block body %}
    {{ parent() }}
    <style type="text/css">
        #menu {
            background-color: #1db1c8;
            padding: 15px;
        }
    </style>

    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
